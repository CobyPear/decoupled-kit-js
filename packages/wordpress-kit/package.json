{
  "name": "@pantheon-systems/wordpress-kit",
  "version": "1.0.0",
  "files": [
    "dist",
    "src/sdk.{js,ts}"
  ],
  "main": "./dist/wordpress-kit.umd.js",
  "module": "./dist/wordpress-kit.es.js",
  "exports": {
    ".": {
      "import": "./dist/wordpress-kit.es.js",
      "require": "./dist/wordpress-kit.umd.js"
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "proseWrap": "always"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,mdx}": "prettier --write"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && rollup -c",
    "serve": "vite preview",
    "typedoc": "typedoc",
    "test": "jest",
    "test:ci": "JEST_JUNIT_OUTPUT_DIR='./test-results/jest' jest --ci --reporters=default --reporters=jest-junit",
    "eslint": "eslint --ext .js,.ts src --ignore-path .gitignore",
    "eslint:fix": "eslint --ext .js,.ts src --fix --ignore-path .gitignore",
    "prettier": "prettier \"**/*.{js,ts,md}\" --check --ignore-path .gitignore",
    "prettier:fix": "prettier \"**/*.{js,ts,md}\" --write --ignore-path .gitignore",
    "lint-staged": "lint-staged",
    "rollup": "rollup -c"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.2.5",
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/jest": "^26.0.24",
    "@types/react": "^17.0.39",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "fetch-mock-jest": "^1.5.1",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "jest-junit": "^12.2.0",
    "lint-staged": "^11.1.2",
    "prettier": "2.3.2",
    "react": "^17.0.2",
    "rollup": "^2.56.3",
    "ts-jest": "^27.0.4",
    "typedoc": "^0.21.5",
    "typescript": "^4.3.2",
    "vite": "^2.4.4"
  },
  "dependencies": {
    "@apollo/client": "^3.5.9",
    "isomorphic-fetch": "^3.0.0"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  }
}
